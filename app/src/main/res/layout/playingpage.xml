<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_animationn_bg"
    android:id="@+id/playPage"
    tools:context=".playingPage">

    <com.example.thechainreaction.Grid
        android:id="@+id/Grid"
        android:layout_width="549dp"
        android:layout_height="1063dp"
        custom:gridBlue="#2039F0"
        custom:gridGreen="#21EB1E"
        custom:gridPink="#EB1EBC "
        custom:gridPurple="#FF5F15"
        custom:gridPurple2="@color/purple_200"
        custom:gridRed="#b31e26"
        custom:gridSblue="#40e0d0"
        custom:gridWhite="@color/white"
        custom:gridYellow="#E4EF07"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintHorizontal_bias="0.493"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toTopOf="parent"
        custom:layout_constraintVertical_bias="0.264">

    </com.example.thechainreaction.Grid>


    <Button
        android:id="@+id/button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/back_btn"
        android:text="@string/backBTN"
        android:textColor="@color/purple_500"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toEndOf="parent"
        custom:layout_constraintHorizontal_bias="0.826"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/Grid"
        custom:layout_constraintVertical_bias="0.662" />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="96dp"
        android:layout_height="49dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/back_btn"
        android:onClick="restartButton"
        android:text="restart"
        android:textColor="@color/purple_500"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintEnd_toStartOf="@+id/button"
        custom:layout_constraintHorizontal_bias="0.437"
        custom:layout_constraintStart_toStartOf="parent"
        custom:layout_constraintTop_toBottomOf="@+id/Grid"
        custom:layout_constraintVertical_bias="0.666" />

</androidx.constraintlayout.widget.ConstraintLayout>